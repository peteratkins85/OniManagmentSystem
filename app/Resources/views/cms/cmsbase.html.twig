{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{{ pageName }}</title>
        <link href="{{ asset('lib/dependencies/bootstrap/dist/css/bootstrap-theme.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('lib/dependencies/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/core.css') }}" rel="stylesheet" type="text/css"/>
        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
       <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="navbar-brand">{{ pageName }}</span>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="user-tab">
                            <span class="user-welcome"> Welcome {#{{  app.user.username }}#}!</span> <div class="user-dropdown" ><img class="user_icon" height="40px" src="/bundles/atkscms/images/user-icon.png" alt="user" ></div>
                        </li>  
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid cms-container">
            <!-- NAVIGATION SIDE BAR -->
            <div class="sidebar">
                <ul style=" padding: 0;">
                    <li class="sidebar-nav-btns title" style="height:51px;font-size:25px;line-height:37px;" >Oni CMS</li>
                </ul>
                <ul style=" padding: 0;">
                    <li class="sidebar-nav-btns"><span class="glyphicon glyphicon-th"></span><a href="dashboard">Dashboard</a> </li>
                    <li class="sidebar-nav-btns popbtn"><span class="glyphicon glyphicon-file"></span> <a href="content" > Pages </a>
                        <ul class="popout">
                            <li> New Page </li>
                            <li> Test Page </li>
                        </ul>
                    </li>
                    <li class="sidebar-nav-btns"> <span class="glyphicon glyphicon-picture"></span>  Media </li>
                    <li class="sidebar-nav-btns"> <span class="glyphicon glyphicon-user"></span> <a href="#">Users</a> </li>
                    <li class="sidebar-nav-btns"> <span class="glyphicon glyphicon-wrench"></span><a href="#">Settings</a></li>
                    <li class="sidebar-nav-btns"> <span class="glyphicon glyphicon-edit"></span>Tag Manager </li>
                </ul>
            </div>
            <!-- NAVIGATION SIDE BAR END -->
            <div class="main-container">
                {% block body %}
                {% endblock %}
            </div>
        </div>
        
        {% block javascripts %}
            {# Bootstrap include #}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script  src="{{ asset('lib/dependencies/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>